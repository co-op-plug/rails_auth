<div class="ui top attached borderless menu">
  <div class="item header">我的账号</div>
  <div class="right menu">
    <div class="item">
    </div>
  </div>
</div>

<table class="ui bottom attached selectable table">
  <tbody>
  <% @oauth_users.each do |oauth_user| %>
    <tr>
      <td><%= oauth_user.type_i18n %></td>
      <td>
        <% if oauth_user.avatar_url %>
          <%= image_tag oauth_user.avatar_url, class: 'ui avatar image' %>
        <% end %>
        <%= oauth_user.name %>
      </td>
      <td><%= oauth_user.account&.identity %></td>
      <td class="ui labels">
        <%= link_to '解绑', my_oauth_user_path(oauth_user), method: :delete, data: { confirm: t('.confirm') }, class: 'ui yellow label' %>
        <%= link_to 'update token', "/auth/#{oauth_user.provider}", class: 'ui blue label' %>
      </td>
    </tr>
  <% end %>
  <% current_user.valid_providers.each do |provider| %>
    <tr>
      <td><%= provider %></td>
      <td colspan="2"></td>
      <td class="ui labels">
        <%= link_to '绑定', "/auth/#{provider}", class: 'ui blue label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
