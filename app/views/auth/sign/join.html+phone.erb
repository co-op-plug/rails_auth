<div class="weui-cells__title">注册/登陆</div>
<div class="weui-cells__group weui-cells__group_form">
<%= form_with theme: 'weui', scope: nil, url: login_path do |f| %>
  <%= f.hidden_field :uid, value: params[:uid], autocomplete: false %>
  <%= f.text_field :identity, value: params[:identity], label: VerifyToken.human_attribute_name(:identity), autocomplete: false %>
  <div class="weui-cell weui-cell_active weui-cell_vcode">
    <div class="weui-cell__hd">
      <label class="weui-label"><%= VerifyToken.human_attribute_name(:token) %></label>
    </div>
    <%= f.text_field :token, on: { wrap_all: false, label: false } %>
    <div class="weui-cell__ft">
      <%= link_to t('.token'), sign_token_path, method: :post, remote: true, id: 'mobile_confirm', class: 'weui-btn weui-btn_default weui-vcode-btn' %>
    </div>
  </div>
  <%= f.submit %>
<% end %>
</div>
