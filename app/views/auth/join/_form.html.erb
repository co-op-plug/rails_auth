<%= form_with scope: nil, url: join_path, local: @local, on: { label: nil, wrapper_input: false, placeholder: true }, css: { wrapper_all: 'field' } do |f| %>
  <%= f.hidden_field :identity, value: params[:identity] %>
  <%= f.text_field :token, placeholder: VerifyToken.human_attribute_name(:token) %>
  <%= f.password_field :password, placeholder: User.human_attribute_name(:password) %>
  <%= f.password_field :password_confirmation, placeholder: User.human_attribute_name(:password_confirmation) %>
  <%= f.submit class: 'ui fluid primary button' %>
<% end %>
