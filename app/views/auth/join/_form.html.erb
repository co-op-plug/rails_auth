<%= form_with model: @user, url: join_path, local: @local, on: { wrapper_input: false } do |f| %>
  <%= render 'shared/error_messages', target: @user %>
  <%= f.email_field :email, placeholder: 'Email', label: nil %>
  <%= f.password_field :password, placeholder: 'Password', label: nil %>
  <%= f.password_field :password_confirmation, placeholder: 'Password confirm', label: nil %>
  <%= f.submit 'submit' %>
<% end %>
