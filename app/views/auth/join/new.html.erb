<div class="three wide column">
  <h4 class="ui block top attached centered header">请注册</h4>
  <div class="ui bottom attached segment">
    <%= form_with scope: nil, url: join_token_path, local: true, on: { label: nil, wrapper_input: false, placeholder: true }, css: { wrapper_all: 'field' } do |f| %>
      <%= f.text_field :identity, placeholder: Account.human_attribute_name(:identity) %>
      <%= f.submit t('.next'), class: 'ui fluid primary button' %>
    <% end %>
  </div>
</div>
