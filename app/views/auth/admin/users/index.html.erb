<div class="ui top attached borderless menu">
  <div class="header item">Users</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'Add New', new_admin_user_path, class: 'ui teal button' %>
    </div>
  </div>
</div>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
  <tr>
    <th><%= User.human_attribute_name(:id) %></th>
    <th><%= User.human_attribute_name(:name) %></th>
    <th><%= User.human_attribute_name(:email) %></th>
    <th><%= User.human_attribute_name(:mobile) %></th>
    <th><%= User.human_attribute_name(:created_at) %></th>
    <th><%= User.human_attribute_name(:last_login_at) %></th>
    <th><%= User.human_attribute_name(:disabled) %></th>
    <th><%= User.human_attribute_name(:oauth_users) %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td>
        <%= link_to admin_user_path(user.id) do %>
          <%= image_tag user.avatar, class: 'ui avatar image' %>
        <% end %>
      </td>
      <td><%= user.email %></td>
      <td><%= user.mobile %></td>
      <td><time><%= user.updated_at.to_s(:rfc822) %></time></td>
      <td><time><%= user.last_login_at.to_s(:rfc822) if user.last_login_at %></time></td>
      <td>
        <%= form_with model: user, url: admin_user_path(user), method: :patch, remote: true do |f| %>
          <%= f.check_box :disabled, onChange: "Rails.fire(this.form, 'submit')", label: false, on: { wrapper_all: false, offset: false } %>
        <% end %>
      </td>
      <td class="ui blue labels">
        <% user.oauth_users.each do |oauth_user| %>
          <%= link_to oauth_user.type, admin_oauth_users_path(user_id: user.id), class: 'ui label' %>
        <% end %>
      </td>
      <td class="ui labels">
        <%= link_to admin_user_path(user), data: { tooltip: t('.show') }, class: 'ui blue mini icon button' do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_user_path(user), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_user_path(user), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @users %>
