<%= form_tag login_path, class: 'ui large form', id: 'login' do %>
  <div class="field">
    <%= text_field_tag :login, params[:login], placeholder: 'Email or Mobile' %>
  </div>
  <div class="field">
    <%= password_field_tag :password, nil, placeholder: 'Password' %>
  </div>
  <div class="field">
    <%= submit_tag 'Submit', class: 'ui button' %>
  </div>
<% end %>





